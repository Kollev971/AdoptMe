{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "listings": {
      ".read": true,
      ".write": "auth != null",
      "$listingId": {
        ".validate": "newData.hasChildren(['title', 'description', 'userId', 'createdAt'])",
        "userId": {
          ".validate": "newData.val() === auth.uid"
        }
      }
    },
    "adoptionRequests": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$requestId": {
        ".validate": "newData.hasChildren(['listingId', 'userId', 'message', 'status', 'createdAt'])",
        "userId": {
          ".validate": "newData.val() === auth.uid"
        }
      }
    },
    "chats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['userId', 'message', 'timestamp'])",
            "userId": {
              ".validate": "newData.val() === auth.uid"
            },
            "message": {
              ".validate": "newData.val().length > 0 && newData.val().length <= 1000"
            },
            "timestamp": {
              ".validate": "newData.val() <= now"
            }
          }
        },
        "participants": {
          "$uid": {
            ".validate": "auth != null && ($uid === auth.uid || root.child('chats').child($chatId).child('participants').child(auth.uid).exists())"
          }
        },
        "lastMessage": {
          ".validate": "newData.hasChildren(['text', 'senderId', 'timestamp'])"
        }
      }
    }
  }
}