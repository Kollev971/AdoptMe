
{
  "rules": {
    "chats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$chatId": {
        "messages": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$messageId": {
            ".validate": "newData.hasChildren(['userId', 'message', 'timestamp'])"
          }
        },
        "participants": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "lastMessage": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
