
{
  "rules": {
    "chats": {
      "$chatId": {
        ".read": "auth != null && root.child('chats').child($chatId).child('participants').child(auth.uid).exists()",
        ".write": "auth != null && root.child('chats').child($chatId).child('participants').child(auth.uid).exists()",
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['userId', 'message', 'timestamp'])",
            "userId": {
              ".validate": "newData.val() === auth.uid"
            },
            "message": {
              ".validate": "newData.val().length > 0 && newData.val().length <= 1000"
            },
            "timestamp": {
              ".validate": "newData.val() <= now"
            }
          }
        },
        "participants": {
          "$uid": {
            ".validate": "auth != null"
          }
        },
        "lastMessage": {
          ".validate": "newData.hasChildren(['text', 'senderId', 'timestamp'])"
        }
      }
    }
  }
}
